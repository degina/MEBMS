<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mebms.mebms.NewEmchilgeeFragment">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/urh_code"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/urh_code" />
                <EditText
                    android:id="@+id/urh_code_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal">
                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/urh_ezen_ner"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/urh_ezen_ner" />
                <EditText
                    android:id="@+id/urh_ezen_ner_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bag_horoo"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bag_horoo" />
                <EditText
                    android:id="@+id/bag_horoo_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/gazar_ner"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gazar_ner" />
                <EditText
                    android:id="@+id/gazar_ner_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/emchilgee_turul"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/emchilgee_turul" />
                <Spinner
                    android:id="@+id/emchilgee_turul_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shimegchteh_uvchin_ner"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/shimegchteh_uvchin_ner" />
                <Spinner
                    android:id="@+id/shimegchteh_ner_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shimegchteh_hamragdsan_too_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/shimegchteh_hamragdsan_too"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shimegchteh_hamragdsan_too" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shimegchteh_honi"
                            android:paddingLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/honi" />

                        <EditText
                            android:id="@+id/shimegchteh_honi_edt"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/shimegchteh_yamaa"
                            android:paddingLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/yamaa" />
                        <EditText
                            android:id="@+id/shimegchteh_yamaa_edt"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/shimegchteh_uher"
                            android:paddingLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/uher" />

                        <EditText
                            android:id="@+id/shimegchteh_uher_edt"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/shimegchteh_mori"
                            android:paddingLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/mori" />

                        <EditText
                            android:id="@+id/shimegchteh_mori_edt"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shimegchteh_temee"
                            android:paddingLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="@string/temee" />

                        <EditText
                            android:id="@+id/shimegchteh_temee_edt"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/beldmel_ner"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:text="@string/beldmel_ner" />
                <EditText
                    android:id="@+id/beldmel_ner_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/longitude" />
                <EditText
                    android:id="@+id/longitude_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude" />
                <EditText
                    android:id="@+id/latitude_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/emchilgee_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
