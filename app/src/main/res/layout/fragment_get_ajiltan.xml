<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GetAjiltanFragment">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:text="@string/id" />

                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:ems="10">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:text="@string/username" />

                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:ems="10">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lastname"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="12.21"
                    android:text="@string/lastname" />

                <TextView
                    android:id="@+id/lastname_text"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:ems="10">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/firstname"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="12.21"
                    android:text="@string/firstname" />

                <TextView
                    android:id="@+id/firstname_text"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:ems="10">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/emch_code"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="12.21"
                    android:text="@string/emch_code" />

                <TextView
                    android:id="@+id/emch_code_text"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:ems="10">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/aimag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52"
                    android:text="@string/aimag_niislel" />

                <TextView
                    android:id="@+id/aimag_text"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:ems="10">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52"
                    android:text="@string/sum_duureg" />

                <TextView
                    android:id="@+id/sum_text"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:ems="10">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
