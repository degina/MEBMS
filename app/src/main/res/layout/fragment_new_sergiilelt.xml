<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mebms.mebms.NewSergiileltFragment">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/urh_code"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/urh_code" />

                <EditText
                    android:id="@+id/urh_code_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/urh_ezen_ner"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/urh_ezen_ner" />

                <EditText
                    android:id="@+id/urh_ezen_ner_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bag_horoo"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bag_horoo" />

                <EditText
                    android:id="@+id/bag_horoo_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/gazar_ner"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gazar_ner" />

                <EditText
                    android:id="@+id/gazar_ner_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:text="Сэргийлэлтийн төрөл" />

                    <CheckBox
                        android:id="@+id/darhlaajuulalt_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/darhlaajuulalt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <CheckBox
                        android:id="@+id/haldvarguitgel_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/haldvarguitgel" />
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/darhlaajuulalt_tuluv"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/darhlaajuulalt_tuluv" />

                    <Spinner
                        android:id="@+id/darhlaajuulalt_tuluv_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/darhlaajuulalt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/niit_too"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/niit_too" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/niit_honi"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/honi" />

                            <EditText
                                android:id="@+id/niit_honi_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/niit_yamaa"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/yamaa" />

                            <EditText
                                android:id="@+id/niit_yamaa_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/niit_uher"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/uher" />

                            <EditText
                                android:id="@+id/niit_uher_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/niit_mori"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/mori" />

                            <EditText
                                android:id="@+id/niit_mori_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/niit_temee"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/temee" />

                            <EditText
                                android:id="@+id/niit_temee_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/hamragdsan_too"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hamragdsan_too" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/hamragdsan_honi"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/honi" />

                            <EditText
                                android:id="@+id/hamragdsan_honi_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/hamragdsan_yamaa"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/yamaa" />

                            <EditText
                                android:id="@+id/hamragdsan_yamaa_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/hamragdsan_uher"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/uher" />

                            <EditText
                                android:id="@+id/hamragdsan_uher_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/hamragdsan_mori"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/mori" />


                            <EditText
                                android:id="@+id/hamragdsan_mori_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/hamragdsan_temee"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/temee" />

                            <EditText
                                android:id="@+id/hamragdsan_temee_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/darhlaajuulalt_ner"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/darhlaajuulalt_ner" />

                    <Spinner
                        android:id="@+id/darhlaajuulalt_ner_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/vaktsin_nershil"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:text="@string/vaktsin_nershil" />

                    <EditText
                        android:id="@+id/vaktsin_nershil_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"></EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/haldvarguitgel_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/haldvarguitgesen_obekt"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/haldvarguitgesen_obekt" />

                    <Spinner
                        android:id="@+id/haldvarguitgesen_obekt_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/longitude" />

                <EditText
                    android:id="@+id/longitude_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude" />

                <EditText
                    android:id="@+id/latitude_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/sergiilelt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
